<scxml initial="idle" final="ArrayDestroyedState" version="0.9" xmlns="http://www.w3.org/2005/07/scxml">
<state id="idle">
	<transition event="array.creation" target="ArrayCreatedState"> </transition>
</state>

<state id="SubscanStartedState">
	<transition event="scan.start" target="ScanStartedState"> </transition>
	<transition event="mount.release" target="MountReleasedState"> </transition>
</state>

<state id="ScanStartedState">
	<transition event="mount.release" target="MountReleasedState"> </transition>
	<transition event="subscan.start" target="SubscanStartedState"> </transition>
</state>

<state id="ObservationStopedState">
	<transition event="array.destruction" target="ArrayDestroyedState"> </transition>
	<transition event="interferometry.start" target="InterferometryStartedState"> </transition>
	<transition event="singledish.start" target="SingledishStartedState"> </transition>
</state>

<state id="SingledishStartedState">
	<transition event="scan.start" target="ScanStartedState"> </transition>
	<transition event="observation.stop" target="ObservationStopedState"> </transition>
</state>

<final id="ArrayDestroyedState"></final>
<state id="ArrayCreatedState">
	<transition event="interferometry.start" target="InterferometryStartedState"> </transition>
	<transition event="array.destruction" target="ArrayDestroyedState"> </transition>
	<transition event="singledish.start" target="SingledishStartedState"> </transition>
</state>

<state id="InterferometryStartedState">
	<transition event="mount.release" target="MountReleasedState"> </transition>
	<transition event="scan.start" target="ScanStartedState"> </transition>
</state>

<state id="MountReleasedState">
	<transition event="observation.stop" target="ObservationStopedState"> </transition>
</state>

</scxml>
